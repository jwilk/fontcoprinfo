from __future__ import print_function

import sys

import fontforge

def main():
    for filename in sys.argv[1:]:
        font = fontforge.open(filename)
        print('{0}: {1}'.format(filename, font.copyright))

if __name__ == '__main__':
    main()

# vim:ts=4 sts=4 sw=4 et
